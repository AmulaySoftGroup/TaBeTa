<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

<!--         android:background="@drawable/backrepeat" -->
    <ImageView
        android:id="@+id/gamebackimage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    
        <LinearLayout
        android:id="@+id/rightlinear"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_300sdp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:background="#0000ffff"
            android:scaleType="fitCenter"
            android:src="@drawable/bt_hint" />

        <ImageButton
            android:id="@+id/undo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:background="#0000ffff"
            android:scaleType="fitCenter"
            android:src="@drawable/bt_undo" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:background="#0000ffff"
            android:scaleType="fitCenter"
            android:src="@drawable/bt_cam" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ad_view"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ir.adad.client.Banner
            android:id="@+id/banner_ad_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" 
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/curl_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ad_view"
        android:layout_centerHorizontal="true" >

        <ir.amulay.tabeta.curl.CurlView
            android:id="@+id/curl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftlinear"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical" >

        
        
                        <LinearLayout
            android:id="@+id/leftinnerlinear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical" >

            <!-- Timer Section -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/limit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/limit1" />

                <ImageView
                    android:id="@+id/aghrabe"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/limitaghrabe" />
            </RelativeLayout>
            <!-- Timer Section -->

        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp" >

            <ImageView
                android:id="@+id/lvlname"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp" />

            <TextView
                android:id="@+id/lvlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center"
                android:text="444444"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>





        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp" >

            <ImageView
                android:id="@+id/cupcount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/cuptxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center"
                android:text="444444"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>
                <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp" >

            <ImageView
                android:id="@+id/scorepanel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center"
                android:text="444444"
                android:textColor="#ffffff"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

    </LinearLayout>


    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />

</RelativeLayout>